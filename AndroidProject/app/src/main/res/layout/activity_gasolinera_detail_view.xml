<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.detail.GasolineraDetailView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="AÃ±adir a favoritos" />

            <ImageView
                android:id="@+id/ivRotulo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:contentDescription="TODO"
                tools:srcCompat="@drawable/generic" />

            <TextView
                android:id="@+id/tvRotulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor = "?android:textColorPrimary"
                android:textSize="24sp"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tvMunicipio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor = "?android:textColorPrimary"
                android:textSize="24sp"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor = "?android:textColorPrimary"
                android:textSize="24sp"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tvHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor = "?android:textColorPrimary"
                android:textSize="24sp"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tvGasolina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor = "?android:textColorPrimary"
                android:textSize="24sp"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tvDiesel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor = "?android:textColorPrimary"
                android:textSize="24sp"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tvMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor = "?android:textColorPrimary"
                android:textSize="24sp"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textDummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>